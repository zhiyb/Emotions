SRC	?= $(wildcard *.JPG) $(wildcard *.jpg) $(wildcard *.png)
DIR	?= telegram
OUT	?= $(SRC:%=$(DIR)/%.png)

DIM	?= 512
ZOOM	?= 6

SHELL	:= /bin/bash

.PHONY: all
all: $(OUT)

.PHONY: clean
clean:
	rm -f $(OUT)

$(DIR):
	mkdir -p $@

.DELETE_ON_ERROR:

$(DIR)/%.png: % | $(DIR)
	convert "$<" -interpolate nearest -filter point -resize "$$(identify -format '%[fx:max(1,floor(min($(DIM),$(ZOOM)*max(w,h))/max(w,h)))]00%' "$<")" -size $(DIM)x1 xc:transparent -background transparent -layers merge -resize 512x512 "$@"
